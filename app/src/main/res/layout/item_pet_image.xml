<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imagePetImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/icon_animal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/icon_pet_clickable"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/icon_circle_100"
        app:layout_constraintBottom_toBottomOf="@+id/imagePetImage"
        app:layout_constraintEnd_toEndOf="@+id/imagePetImage"
        app:layout_constraintStart_toStartOf="@+id/imagePetImage"
        app:layout_constraintTop_toTopOf="@+id/imagePetImage"
        android:padding="5dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>